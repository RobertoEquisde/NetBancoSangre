


@model System.Data.DataTable
@{
    ViewData["Title"] = "Lista de Donacion";
}
<html>
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
</head>


     <body>
               <div class="mb-3 text-end">
        <a asp-action="Logout" class="btn btn-danger">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-door-open-fill" viewBox="0 0 16 16">
                <path d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z"/>
            </svg>
        </a>
    </div>

    <!-- Menú -->
    <div class="container">
        <div class="row">
            <div class="col">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Usuario/index">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Usuario/Donantes">Donantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Usuario/Donacion">Donación</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Usuario/Citas">Citas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Usuario/Almacenamiento">Almacenamiento</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" href="~/Usuario/hospitales">hospitales</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
            <div class="jumbotron">
            <h1 class="text-center">@ViewData["Title"]</h1>
        </div>

        <div class="mb-3">
            <a asp-action="AnadirDonacion" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                    <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                    <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </a>
        </div>

        <table id="myTable" class="display">
            <thead class="thead-light">
                <tr>
                    <th>id de  hospitales</th>
                    <th>id de almacen</th>
                    <th>id de donante</th>
                    <th>fecha de envio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <td>@row["id_hospitales"]</td>
                        <td>@row["id_almacen"]</td>
                        <td>@row["id_donante"]</td>
                        <td>@row["fecha_envio"]</td>
            
                    </tr>
                }
            </tbody>
        </table>
     </body>
</html>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
