@using banco_sangre.Models
@model DonanteViewModel


<h2>Editar Donante</h2>

<form asp-controller="Banco" asp-action="EditarDonante" method="POST">
    <input type="hidden" asp-for="donante_id" />

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" asp-for="nombre" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="edad" asp-for="edad" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="genero">Género:</label>
        <input type="text" id="genero" name="genero" asp-for="genero" class="form-control">
    </div>

    <div class="form-group">
        <label for="tipoSangre">Tipo de Sangre:</label>
        <input type="text" id="tipo_sangre" name="tipo_sangre" asp-for="tipo_sangre" class="form-control">
    </div>

    <div class="form-group">
        <label for="direccion">Dirección:</label>
        <input type="text" id="direccion" name="direccion" asp-for="direccion" class="form-control">
    </div>

    <div class="form-group">
        <label for="numero_contacto">Teléfono:</label>
        <input type="text" id="numero_contacto" name="numero_contacto" asp-for="numero_contacto" class="form-control">
    </div>


    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>
