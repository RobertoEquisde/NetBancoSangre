@model Tuple<System.Data.DataTable, System.Data.DataTable>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>certificado</title>
    <style>
        .contenedor {
           width: 900px !important;
           height:842px !important;
           margin:auto;
        }
        body{
           font-family:Arial, Helvetica, sans-serif
        }
        p.title{
           font-weight:bold;
        }
         p.title2{
           font-weight:bold;
           color: #d91536;
           font-size:20px;
        }
        p.text{
           font-size:15px;
           font-weight:100;
           color:#858585;
        }
        p{
           margin:0px
        }
        .tbth{
           text-align:left;
        }

        table.tbproductos{
            border-collapse: separate;
            border-spacing: 4px;
        }

        table.tbproductos thead tr th {
           background-color: #d91536;
           padding:10px;
           font-size:15px;
           color:white;
        }
        table.tbproductos tbody tr td{
           padding:10px;
        }
        .item{
           font-size:15px;
           font-weight:100;
           color:#757575;
        }
        .item-2{
        font-size:15px;
           font-weight:bold;
           color:#757575;
        }

        .item-3{
           font-size:15px;
           font-weight:bold;
           background-color:#dd2905;
           color:white;
        }

         .td-item {
           border-bottom:2px solid #E8E8E8 !important;
         }
    </style>
</head>
<body >

    <div class="contenedor">
        @foreach (System.Data.DataRow row in Model.Item1.Rows)
        {
        <table style="width:100%">
            <tr>
                <td>
                    <img src="~/img/avatar.jpg" style="width: 250px;"/>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                            
                
                                     <tr><td><p class="title2">ID usuario</p></td></tr>
                                     <tr><td> @row["id_donante"] </td></tr>
                            
                       
                    </table>
                </td>
            </tr>
        </table>
        <br />
         <table style="width:100%">
            <tr>
                <td>
                    <table >
                        <tr>
                            <td>
                                <p class="title">Datos del dondante</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text">fecha de nacimiento: @row["anio_nacimiento"]</p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">tipo sangre: @row["tipo_sangre"]</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td><p class="title">Donante</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">nombre:@row["nombre"]</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">apellidos:@row["apellidos"]</p></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">donante</th>
                    <th class="tbth" style="width:130px">tipo de sangre</th>
                    <th class="tbth" style="width:130px">fecha de expiracion</th>
                    <th class="tbth" style="width:130px">cantidad </th>
                </tr>
            </thead>
            <tbody>
                      
                       
                            
                    @foreach (System.Data.DataRow row2 in Model.Item2.Rows)
                    {
                        <tr>
                           @{ 
                                String nombre = row["nombre"].ToString();
                                nombre +=  " " + row["apellidos"].ToString();
                           }
                            <td class="td-item"> @nombre <p class="item"></p></td>
                            <td class="td-item"><p class="item">@row2["tipo_sangre"]</p></td>
                            <td class="td-item"><p class="item">@row2["fecha_expiracion"]</p></td>
                            <td class="td-item"><p class="item">@row2["cantidad"] ml</p></td>
                           
                        </tr>

                    }
                
           
            </tbody>
        </table>
       
  
        }
    </div>
    <p style="text-align:center; font-size: 18px; margin-top: 20px;">GRACIAS POR TU DONACION</p>
    
</body>
</html>    